{
  "$schema": "https://schemas.wp.org/wp/6.9/theme.json",
  "version": 3,
  "customTemplates": [
    {
      "name": "page-no-title",
      "postTypes": ["page", "ollie_pattern", "post"],
      "title": "Page (Full Width, No Title)"
    },
    {
      "name": "page-with-sidebar",
      "postTypes": ["post", "page"],
      "title": "Page (With Sidebar)"
    }
  ],
  "settings": {
    "appearanceTools": false,
    "layout": {
      "contentSize": "740px",
      "wideSize": "1260px"
    },
    "useRootPaddingAwareAlignments": true,
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false,
      "custom": false,
      "customGradient": false,
      "customDuotone": false,
      "gradients": [],
      "duotone": [],
      "palette": [
        { "name": "Brand Primary", "slug": "brand-primary", "color": "rgb(0, 53, 101)" },
        { "name": "Brand Secondary", "slug": "brand-secondary", "color": "rgb(193, 10, 39)" },
        { "name": "Purple", "slug": "purple", "color": "rgb(101, 75, 120)" },
        { "name": "Green", "slug": "green", "color": "rgb(115, 169, 80)" },
        { "name": "Blue", "slug": "blue", "color": "rgb(125, 173, 212)" },
        { "name": "Warm Grey", "slug": "warm-grey", "color": "rgb(112, 98, 89)" },
        { "name": "Light Grey Blue", "slug": "light-grey-blue", "color": "rgb(193, 206, 214)" },
        { "name": "Slate", "slug": "slate", "color": "rgb(92, 102, 112)" },
        { "name": "White", "slug": "white", "color": "rgb(255, 255, 255)" },
        { "name": "Near Black", "slug": "near-black", "color": "rgb(17, 17, 17)" }
      ]
    },
    "typography": {
      "defaultFontSizes": false,
      "dropCap": false,
      "fluid": true,
      "customFontSize": false,
      "fontFamilies": [
        {
          "name": "Nunito Sans",
          "slug": "nunito-sans",
          "fontFamily": "\"Nunito Sans\", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
          "fontFace": [
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "200",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-200.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "300",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-300.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-regular.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-500.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-600.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-700.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "800",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-800.woff2"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontStyle": "normal",
              "fontWeight": "900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/nunito-sans/nunito-sans-v19-latin-900.woff2"]
            }
          ]
        },
        {
          "fontFamily": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "1rem", "fluid": { "min": "0.95rem", "max": "1.05rem" } },
        { "name": "Base", "slug": "base", "size": "1.125rem", "fluid": { "min": "1.05rem", "max": "1.2rem" } },
        { "name": "H4", "slug": "h4", "size": "1.25rem", "fluid": { "min": "1.15rem", "max": "1.35rem" } },
        { "name": "H3", "slug": "h3", "size": "1.5rem", "fluid": { "min": "1.25rem", "max": "1.75rem" } },
        { "name": "H2", "slug": "h2", "size": "2rem", "fluid": { "min": "1.6rem", "max": "2.4rem" } },
        { "name": "H1", "slug": "h1", "size": "2.75rem", "fluid": { "min": "2.1rem", "max": "3.25rem" } }
      ],
      "writingMode": true
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "customSpacingSize": false,
      "spacingSizes": [
        { "name": "Small", "size": "clamp(.5rem, 2.5vw, 1rem)", "slug": "small" },
        { "name": "Medium", "size": "clamp(1.5rem, 4vw, 2rem)", "slug": "medium" },
        { "name": "Large", "size": "clamp(2rem, 5vw, 3rem)", "slug": "large" },
        { "name": "Extra Large", "size": "clamp(3rem, 7vw, 5rem)", "slug": "x-large" }
      ],
      "units": ["px", "rem", "%"]
    },
    "shadow": {
      "defaultPresets": false,
      "presets": []
    },
    "border": {
      "color": false,
      "radius": false,
      "style": false,
      "width": false
    },
    "custom": {
      "fontWeight": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semi-bold": 600,
        "bold": 700,
        "extra-bold": 800,
        "black": 900
      },
      "lineHeight": {
        "none": 1,
        "tight": 1.1,
        "snug": 1.2,
        "body": 1.55,
        "relaxed": 1.7
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--near-black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--nunito-sans)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "fontWeight": "400",
      "lineHeight": "var(--wp--custom--line-height--body)"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--medium)",
      "padding": {
        "left": "var(--wp--preset--spacing--medium)",
        "right": "var(--wp--preset--spacing--medium)",
        "top": "0",
        "bottom": "0"
      }
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--nunito-sans)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--snug)"
        }
      },
      "h1": { "typography": { "fontSize": "var(--wp--preset--font-size--h1)" } },
      "h2": { "typography": { "fontSize": "var(--wp--preset--font-size--h2)" } },
      "h3": { "typography": { "fontSize": "var(--wp--preset--font-size--h3)" } },
      "h4": { "typography": { "fontSize": "var(--wp--preset--font-size--h4)" } },
      "link": {
        "color": { "text": "var(--wp--preset--color--brand-primary)" },
        ":hover": { "color": { "text": "var(--wp--preset--color--brand-secondary)" } }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--brand-primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--nunito-sans)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "border": { "radius": "6px" },
        "spacing": {
          "padding": {
            "top": ".65em",
            "bottom": ".65em",
            "left": "1.1em",
            "right": "1.1em"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--brand-secondary)",
            "text": "var(--wp--preset--color--white)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--nunito-sans)" }
      },
      "core/code": {
        "color": {
          "background": "var(--wp--preset--color--light-grey-blue)",
          "text": "var(--wp--preset--color--near-black)"
        },
        "border": { "radius": "6px" },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--small)",
            "right": "var(--wp--preset--spacing--small)",
            "bottom": "var(--wp--preset--spacing--small)",
            "left": "var(--wp--preset--spacing--small)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/preformatted": {
        "color": {
          "background": "var(--wp--preset--color--light-grey-blue)",
          "text": "var(--wp--preset--color--near-black)"
        },
        "border": { "radius": "6px" },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--small)",
            "right": "var(--wp--preset--spacing--small)",
            "bottom": "var(--wp--preset--spacing--small)",
            "left": "var(--wp--preset--spacing--small)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/separator": {
        "color": { "text": "var(--wp--preset--color--light-grey-blue)" }
      }
    }
  },
  "templateParts": [
    { "area": "header", "name": "header", "title": "Header" },
    { "area": "footer", "name": "footer", "title": "Footer" },
    { "area": "sidebar", "name": "sidebar", "title": "Sidebar" }
  ]
}
